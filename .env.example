# Server Configuration
PORT=4000
NODE_ENV=development

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# JWT Configuration
JWT_SECRET=your_strong_jwt_secret_here_min_32_chars

# CORS Configuration
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info

# Shopify Admin API
# Ex: your-store.myshopify.com (sans https://)
SHOPIFY_STORE_DOMAIN=your-store.myshopify.com
# Admin API access token (private app / custom app)
SHOPIFY_ADMIN_API_TOKEN=your-admin-api-token
# Webhook secret for HMAC verification (found in Shopify webhook settings)
SHOPIFY_WEBHOOK_SECRET=your-webhook-secret
